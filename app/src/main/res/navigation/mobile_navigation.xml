<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <activity
        android:id="@+id/navigation_home"
        android:name="com.sumagoinfotech.digicopy.ui.activities.AllocateWorkActivity"
        android:label="@string/title_home"
        tools:layout="@layout/activity_allocate_work" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.sumagoinfotech.digicopy.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <activity
        android:id="@+id/navigation_attendence"
        android:name="com.sumagoinfotech.digicopy.ui.activities.LoginActivity"
        android:label="@string/title_notifications"
        tools:layout="@layout/activity_login" />

    <activity
        android:id="@+id/navigation_upload_document"
        android:name="com.sumagoinfotech.digicopy.ui.activities.LabourDetailsActivity"
        android:label="@string/title_notifications"
        tools:layout="@layout/activity_labour_details" />
</navigation>