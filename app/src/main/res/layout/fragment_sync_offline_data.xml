<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    tools:context=".ui.sync.SyncOfflineData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:textColor="@color/appBlue"
        android:fontFamily="@font/poppins"
        android:textSize="16dp"
        android:text="@string/sync_offline_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>



    <androidx.cardview.widget.CardView
        android:layout_marginTop="24dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/layoutLabourRegistrationsOffline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        
        <LinearLayout
            android:weightSum="10"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="#EEEBFF"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="4"
                android:src="@drawable/labour1"
                android:layout_width="250dp"
                android:layout_height="150dp"></ImageView>

            <TextView
                android:textColor="@color/black"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/poppins"
                android:textSize="16dp"
                android:text="@string/labour_registration_saved_offline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@color/appBlue"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:textSize="32dp"
                android:text="@string/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_weight="6"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:textSize="16dp"
                android:text="@string/entries_to_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <androidx.cardview.widget.CardView
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                android:layout_width="50dp"
                android:layout_height="30dp">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="36dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutOfflineDocuments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="10"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="#EEEBFF"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/circle_blue_background"
                    android:layout_weight="4"
                    android:src="@drawable/document1"
                    android:layout_width="250dp"
                    android:layout_height="150dp"></ImageView>

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins"
                    android:textSize="16dp"
                    android:text="@string/documents_saved_offline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@color/appBlue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="32dp"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="16dp"
                    android:text="@string/entries_to_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>


                <androidx.cardview.widget.CardView
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="16dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></ImageView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>