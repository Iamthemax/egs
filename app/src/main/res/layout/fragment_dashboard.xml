<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background">

        <EditText
            android:background="@drawable/edittext_background"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"></EditText>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_backgroud_blue"
            android:orientation="horizontal">
            <LinearLayout
                android:paddingLeft="10dp"
                android:background="#4529C9"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Work Area ID"
                    android:textColor="@color/white"
                    android:textSize="12dp"></TextView>
            </LinearLayout>
            <TextView
                android:background="#4529C9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=" | "
                android:textColor="@color/white"
                ></TextView>

            <LinearLayout
                android:background="#4529C9"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Labour ID"
                    android:textColor="@color/white"
                    android:textSize="12dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="13dp"
        android:paddingRight="3dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:background="@drawable/rounded_one_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/scan_me"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Scan QR \n Code"
            android:textColor="@color/white"
            android:textSize="8dp"></TextView>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <ImageView
            android:src="@drawable/profile"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Register \n Labour"
            android:textColor="@color/white"
            android:textSize="8dp"></TextView>

    </LinearLayout>



</RelativeLayout>