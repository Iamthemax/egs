<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.dashboard.DashboardFragment">

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background">

        <EditText
            android:paddingLeft="16dp"
            android:background="@drawable/edittext_background"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"></EditText>
        <com.sumagoinfotech.digicopy.utils.CustomClickableLayout
            android:layout_gravity="center"
            android:background="@drawable/rounded_backgroud_blue"
            android:id="@+id/customLayout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundColorNormal="@color/black"
            app:backgroundColorPressed="@color/white"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text 1"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewSeparator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text 2"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

        </com.sumagoinfotech.digicopy.utils.CustomClickableLayout>

        <LinearLayout
            android:visibility="visible"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_backgroud_blue"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layoutByProjectId"
                android:background="#4529C9"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Work Area ID"
                    android:textColor="@color/white"
                    android:textSize="12dp"></TextView>
            </LinearLayout>
            <TextView
                android:background="#4529C9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=" | "
                android:textColor="@color/white"
                ></TextView>

            <LinearLayout
                android:id="@+id/layoutByLabourId"
                android:background="#4529C9"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Labour ID"
                    android:textColor="@color/white"
                    android:textSize="12dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingRight="13dp"
        android:paddingLeft="8dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:background="@drawable/rounded_one_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutScanQR">

        <ImageView
            android:src="@drawable/scan_me"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Scan QR \n Code"
            android:textColor="@color/white"
            android:textSize="8dp"></TextView>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
<LinearLayout
    android:clickable="true"
    android:id="@+id/layoutRegisterLabour"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/profile"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Register \n Labour"
            android:textColor="@color/white"
            android:textSize="8dp"></TextView>
</LinearLayout>
    </LinearLayout>



</RelativeLayout>