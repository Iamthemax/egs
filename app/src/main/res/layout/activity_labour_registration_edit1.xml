<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.registration.LabourRegistrationEdit1">

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Labour Details"
            android:textColor="@color/appBlue"
            android:textSize="18dp" />
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/full_name"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etFullName"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:hint="@string/enter_full_name"
                android:background="@drawable/rounded_background_light_gray"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></EditText>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/gender"
                android:layout_width="24dp"
                android:layout_height="24dp">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/select_gender"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/actGender"
                android:inputType="none"
                android:drawableEnd="@drawable/arrow_dropdown"
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:hint="@string/select_gender"
                android:background="@drawable/edittext_background"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></AutoCompleteTextView>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/gender"
                android:layout_width="24dp"
                android:layout_height="24dp"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/select_date_of_birth"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />

            <TextView
                android:background="@drawable/rounded_background_light_gray"
                android:clickable="true"
                android:inputType="none"
                android:id="@+id/etDob"
                android:drawableEnd="@drawable/calendar"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:hint="@string/date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="48dp"></TextView>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/select_skills"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:inputType="none"
                android:id="@+id/actSkill"
                android:drawableEnd="@drawable/arrow_dropdown"
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:hint="@string/select_skills"
                android:background="@drawable/edittext_background"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></AutoCompleteTextView>
            <ImageView
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/dob"
                android:layout_width="24dp"
                android:layout_height="24dp"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/district"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/actDistrict"
                android:drawableEnd="@drawable/arrow_dropdown"
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:hint="@string/district"
                android:inputType="none"
                android:background="@drawable/edittext_background"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></AutoCompleteTextView>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/location"
                android:layout_width="24dp"
                android:layout_height="24dp"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/taluka"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/actTaluka"
                android:drawableEnd="@drawable/arrow_dropdown"
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:hint="@string/taluka"
                android:inputType="none"
                android:background="@drawable/edittext_background"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></AutoCompleteTextView>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/location"
                android:layout_width="24dp"
                android:layout_height="24dp"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/village"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:inputType="none"
                android:id="@+id/actVillage"
                android:drawableEnd="@drawable/arrow_dropdown"
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:hint="@string/village"
                android:background="@drawable/edittext_background"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></AutoCompleteTextView>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/location"
                android:layout_width="24dp"
                android:layout_height="24dp"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/mobile_number"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etMobileNumber"
                android:lines="1"
                android:maxLines="1"
                android:maxLength="10"
                android:singleLine="true"
                android:digits="0123456789"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:background="@drawable/rounded_background_light_gray"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></EditText>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/mobile"
                android:layout_width="24dp"
                android:layout_height="24dp">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/landline_number"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etLandLine"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:hint="@string/landline_number"
                android:inputType="phone"
                android:background="@drawable/rounded_background_light_gray"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></EditText>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/landline"
                android:layout_width="24dp"
                android:layout_height="24dp">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/mgnrega_id_card_number"
            android:textSize="10dp"
            android:textColor="@color/appBlue"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:digits="@string/no_space_letter_number"
                android:id="@+id/etMgnregaIdNumber"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:maxLength="50"
                android:hint="@string/mgnrega_id_card_number"
                android:inputType="text"
                android:background="@drawable/rounded_background_light_gray"
                android:layout_width="wrap_content"
                android:layout_height="48dp"></EditText>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/idcard"
                android:layout_width="24dp"
                android:layout_height="24dp">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:visibility="gone"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_marginBottom="24dp"
                android:id="@+id/btnUpdateLabour"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_background"
                android:text="Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:clickable="true"
                android:layout_weight="1"
                android:layout_marginBottom="24dp"
                android:id="@+id/btnNext"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_background"
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>


    </LinearLayout>

</ScrollView>