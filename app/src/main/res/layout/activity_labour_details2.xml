<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.LabourRegistration2Activity">
<LinearLayout
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:textColor="@color/appBlue"
            android:text="Family Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"></View>

        <FrameLayout
            android:id="@+id/layoutAdd"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/rounded_backgroud_blue"
                android:elevation="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/add"
                android:layout_width="16dp"
                android:layout_height="16dp"></ImageView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="-5dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/rounded_blue_border"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="Add"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFamilyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:fontFamily="@font/poppins"
            android:textColor="@color/appBlue"
            android:text="No family member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioButton>
        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"></View>

    </LinearLayout>

    <TextView
        android:fontFamily="@font/poppins"
        android:textColor="@color/appBlue"
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rounded_background_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:id="@+id/etLocation"
            android:inputType="none"
            android:paddingLeft="16dp"
            android:layout_weight="1"
            android:hint="Location"
            android:background="@drawable/edittext_background"
            android:layout_width="wrap_content"
            android:layout_height="48dp"></AutoCompleteTextView>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/location"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>


    </LinearLayout>


    <TextView
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:textColor="@color/appBlue"
        android:text="Add Documents"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/layoutAadharCard"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/rounded_backgroud_blue"
            android:elevation="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/add"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <androidx.cardview.widget.CardView
            android:background="@color/white"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/ivAadhar"
                    android:layout_gravity="center"
                    android:src="@drawable/document"
                    android:layout_width="150dp"
                    android:layout_height="80dp"></ImageView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
        <TextView

            android:textStyle="bold"
            android:elevation="5dp"
            android:layout_gravity="center|bottom"
            android:textColor="@color/black"
            android:text="Aadhar Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <View
        android:layout_width="50dp"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/layoutMgnregaCard"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/rounded_backgroud_blue"
                android:elevation="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/add"
                android:layout_width="24dp"
                android:layout_height="24dp"></ImageView>
            <androidx.cardview.widget.CardView
                android:background="@color/white"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivMgnregaCard"
                        android:layout_gravity="center"
                        android:src="@drawable/document"
                        android:scaleType="fitXY"
                        android:layout_width="120dp"
                        android:layout_height="80dp"></ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView

            android:elevation="5dp"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"
            android:textColor="@color/black"
            android:text="@string/mgnrega_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/layoutVoterId"
                android:background="@color/white"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/rounded_backgroud_blue"
                    android:elevation="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"></ImageView>
                <androidx.cardview.widget.CardView
                    android:background="@color/white"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/ivVoterId"
                            android:layout_gravity="center"
                            android:src="@drawable/document"
                            android:layout_width="150dp"
                            android:layout_height="80dp"></ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <TextView

                android:textStyle="bold"
                android:elevation="5dp"
                android:layout_gravity="center|bottom"
                android:textColor="@color/black"
                android:text="Voter Id Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layoutPhoto"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="220dp">
        <ImageView
            android:background="@drawable/rounded_backgroud_blue"
            android:elevation="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/add"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <androidx.cardview.widget.CardView
            android:background="@color/white"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivPhoto"
                    android:layout_gravity="center"
                    android:src="@drawable/user_icon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"></de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/labor_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/appBlue"
        android:text="Registration Status"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:drawableEnd="@drawable/arrow_dropdown"
            android:paddingLeft="16dp"
            android:layout_weight="1"
            android:hint="Pending"
            android:background="@drawable/edittext_background"
            android:layout_width="wrap_content"
            android:layout_height="48dp"></EditText>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/location"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
    </LinearLayout>
    <Button
        android:layout_marginBottom="24dp"
        android:id="@+id/btnSubmit"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
</LinearLayout>
</ScrollView>