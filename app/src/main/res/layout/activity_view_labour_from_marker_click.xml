<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.gramsevak.ViewLabourFromMarkerClick">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/appBlue"
        android:id="@+id/fabEdit"
        android:visibility="gone"
        app:tint="@color/white"
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.google.android.material.floatingactionbutton.FloatingActionButton>
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:paddingBottom="24dp"
                android:background="@color/white"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPhoto"
                        android:layout_gravity="center"
                        android:src="@drawable/user_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"></de.hdodenhof.circleimageview.CircleImageView>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/full_name"
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvFullName"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:text="@string/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvGender"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:text="@string/date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvDob"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:text="@string/district"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvDistritct"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:text="@string/taluka"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvTaluka"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:text="@string/village"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvVillage"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:text="@string/mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvMobile"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:text="@string/landline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvLandline"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black" android:layout_weight="7"
                            android:text="@string/mgnrega_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/tvMnregaId"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>


                    <TextView
                        android:textSize="14dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/appBlue"
                        android:text="Family Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewFamilyDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/appBlue"
                        android:text="Documents"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true"
                            app:cardPreventCornerOverlap="true"
                            app:cardCornerRadius="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_weight="1"
                                    android:scaleType="center"                                    android:id="@+id/ivVoterId"
                                    android:layout_gravity="center"
                                    android:src="@drawable/document"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"></ImageView>
                                <TextView
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:text="@string/voter_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true"
                            app:cardPreventCornerOverlap="true"
                            app:cardCornerRadius="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_weight="1"
                                    android:scaleType="center"
                                    android:id="@+id/ivAadhar"
                                    android:layout_gravity="center"
                                    android:src="@drawable/document"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"></ImageView>

                                <TextView
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:text="@string/aadhar_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true"
                            app:cardPreventCornerOverlap="true"
                            app:cardCornerRadius="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_weight="1"
                                    android:scaleType="center"                                    android:id="@+id/ivMnregaCard"
                                    android:layout_gravity="center"
                                    android:src="@drawable/document"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"></ImageView>

                                <TextView
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:text="@string/mgnrega_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>